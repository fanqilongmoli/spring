<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace 是命名空间 是用来隔离sql语句的
    #{} 是一个占位符 相当与jdbc的？
    ${} 是字符串拼接指令 如果入参为不同数据类型 {}内只能写value-->
<mapper namespace="user">
    <!--id 是sql语句的唯一表示
        parameterType是入参的数据类型
        resultType返回结果的数据类型
        -->
    <select id="getUserById" parameterType="int" resultType="com.fanqilong.mybaits.pojo.User">
        select * from `user` where id = #{id}
    </select>
    <!--resultType 如果返回结果为集合值，只需要设置为单个元素的数据类型-->
    <select id="getUserByUsername" parameterType="string" resultType="com.fanqilong.mybaits.pojo.User">
        select * from `user` where username LIKE '%${value}%'
    </select>
    <!--插入用户-->
    <insert id="insertUser" parameterType="com.fanqilong.mybaits.pojo.User">
        insert into `user` (`username`,`birthday`,`sex`,`address`) values (#{username},#{birthday},#{sex},#{address})
    </insert>
</mapper>
